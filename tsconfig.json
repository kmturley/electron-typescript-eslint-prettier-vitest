{
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "build",
    "declaration": true,
    "isolatedModules": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests/**/*.ts", "node_modules"]
}
